@page
@model CO5227_Assignment.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<head>
    <link rel="stylesheet" href="~/css/contact.css" />
</head>
<div class="text-center">
    <h1 class="display-5 mb-3 pb-3">Contact</h1>
    <div class="d-flex justify-content-around">
        <div>
            <form method="post">

                <div class="form-group py-2 ">
                    <p class="fw-bold">Email</p>
                    <input asp-for="Email" />
                </div>

                <div class="form-group py-2 ">
                    <p class="fw-bold">Subject</p>
                    <input asp-for="Subject" />
                </div>

                <div class="form-group">
                    <p class="fw-bold">Message</p>
                    <label asp-for="Body" />
                    <textarea rows="5" cols="40"></textarea>
                </div>

                <button class="py-2 px-3 my-3 fw-bold" type="submit" asp-page-handler="Submit">Submit</button>

            </form>
            <div class="mb-4">
                @{

                    if (Model.isSuccessful == true)
                    {
                                <em class="text-success">Your email was sent successfully!</em>
                    }
                    else if (Model.isSuccessful == false)
                    {
                                <em class="text-danger">Your email was not sent, please try again.</em>
                    }
                }
            </div>
        </div>
        <div id="map" class="mb-5">
            <script>
                var map;
                function initMap(){
                    map = new google.maps.Map(document.getElementById('map'), {
                        center: { lat: 35.67401172282793, lng: 139.7715725798791 },
                        zoom: 13
                    });
                } 
            </script>
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBBgkTc3kdkWWbYuYe7p4OaLYZRQFIdFPU&callback=initMap"
            async defer></script>
        </div>
    </div>
    
    
</div>