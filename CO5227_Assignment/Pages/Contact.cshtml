@page
@model CO5227_Assignment.Pages.ContactModel
@{
    ViewData["Title"] = "Contact";
}

<div class="text-center">
    <h1 class="display-5">Contact</h1>

    <form method="post" >
            
        <div class="form-group py-2 ">
            <p>Email</p>
            <input asp-for="Email" />
        </div>

        <div class="form-group py-2 ">
            <p>Subject</p>
            <input asp-for="Subject" />
        </div>

        <div class="form-group">
            <p>Message</p>
            <label asp-for="Body" />
            <textarea rows="5" cols="40"></textarea>
        </div>
            
        <button class="py-2 px-3 my-3" type="submit" asp-page-handler="Submit">Submit</button>
        
    </form>
    <div class="mb-4">
        @{

            if (Model.isSuccessful == true)
            {
                <em class="text-success">Your email was sent successfully!</em>
            }
            else if (Model.isSuccessful == false)
            {
                <em class="text-danger">Your email was not sent, please try again.</em>
            }
        }
    </div>
    
</div>