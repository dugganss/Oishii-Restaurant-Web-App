                }
                <a asp-page="/userMenuIndex"><button asp-page="/userMenuIndex" class="btn btn-outline-light btn-lg px-5 py-3 mb-5 mt-3">All Items Found On Our Menu!</button></a>
          </div>

          <div class="col-lg-4 mb-4 mb-lg-0">
                @if (Model.signatures.Count >= 5)
                {
                    <a asp-page="/AdminMenu/Details" asp-route-id="@Model.signatures[4].itemID">
                    @try
                    {
                        <img class="w-100 shadow-1-strong rounded mb-4" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.signatures[4].imgData))" alt="@Model.signatures[4].imgDescription" />
                    }
                    catch
                    {
                        <img class="w-100 shadow-1-strong rounded mb-4" src="~/img/noimg.png" alt="No image found" />
                    }
                    </a>
                }

                @if (Model.signatures.Count >= 6)
                {
                    <a asp-page="/AdminMenu/Details" asp-route-id="@Model.signatures[5].itemID">
                    @try
                    {
                        <img class="w-100 shadow-1-strong rounded mb-4" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.signatures[5].imgData))" alt="@Model.signatures[5].imgDescription" />
                    }
                    catch
                    {
                        <img class="w-100 shadow-1-strong rounded mb-4" src="~/img/noimg.png" alt="No image found" />
                    }
                    </a>
                }

          </div>

        </div>
    </div>




    

</body>

