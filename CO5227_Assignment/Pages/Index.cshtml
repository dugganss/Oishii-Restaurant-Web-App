@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<head>
    <link rel="stylesheet" href="~/css/index.css"/>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>

<body class="h-100" id ="body">

    <!-- Main image describing what restaurant is -->

    <div id = "image-container">
        
        <img src="@Url.Content("~/img/oishiisushi_index_bg_img.jpg")" class="img-fluid pb-4" alt="Delicious sushi on a table" />
        <div id="main-image-text"><h1 id = "h1-font-size-increase"class="display-7" >Japanese Restaurant and Bar</h1></div>
    </div>
    
    <!-- section withh carousels for menu items and to learn more -->

    <div class="text-center">
    <h1 id = "spaced-heading" class="display-5 border-bottom border-dark border-2 pb-4">Discover Oishii</h1>
</div>

<!-- Carousel for menu -->

<div class="d-flex">
    <div class="w-50 m-5 text-center">
        <div class="fixed-height-carousel">
            <div id="carousels" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousels" data-slide-to="0" class="active"></li>
                    <li data-target="#carousels" data-slide-to="1"></li>
                    <li data-target="#carousels" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                            <!-- Checks there are enough items in menu then displays image for 1st item if it exists -->
                        @if (Model.allMenuItems.Count >= 1)
                        {
                            <a asp-page="/AdminMenu/Details" asp-route-id="@Model.allMenuItems[0].itemID">
                                @try
                                {
                                    <img class="d-block w-100 border border-dark border-5" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.allMenuItems[0].imgData))" alt="@Model.allMenuItems[0].imgDescription" />
                                }
                                catch
                                {
                                    <img class="d-block w-100 border border-dark border-5" src="~/img/noimg.png" alt="No image found" />
                                }
                            </a>
                        }
                    </div>
                    <div class="carousel-item">
                            <!-- Checks there are enough items in menu then displays image for 2nd item if it exists -->
                        @if (Model.allMenuItems.Count >= 2)
                        {
                            <a asp-page="/AdminMenu/Details" asp-route-id="@Model.allMenuItems[1].itemID">
                                @try
                                {
                                    <img class="d-block w-100 border border-dark border-5" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.allMenuItems[1].imgData))" alt="@Model.allMenuItems[1].imgDescription" />
                                }
                                catch
                                {
                                    <img class="d-block w-100 border border-dark border-5" src="~/img/noimg.png" alt="No image found" />
                                }
                            </a>
                        }
                    </div>
                    <div class="carousel-item">
                            <!-- Checks there are enough items in menu then displays image for 3rd item if it exists -->
                        @if (Model.allMenuItems.Count >= 3)
                        {
                            <a asp-page="/AdminMenu/Details" asp-route-id="@Model.allMenuItems[2].itemID">
                                @try
                                {
                                    <img class="d-block w-100 border border-dark border-5" src="@string.Format("data:image/jpg;base64,{0}", Convert.ToBase64String(Model.allMenuItems[2].imgData))" alt="@Model.allMenuItems[2].imgDescription" />
                                }
                                catch
                                {
                                    <img class="d-block w-100 border border-dark border-5" src="~/img/noimg.png" alt="No image found" />
                                }
                            </a>
                        }
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousels" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only"></span>
                </a>
                <a class="carousel-control-next" href="#carousels" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only"></span>
                </a>
            </div>
        </div>
        <a asp-page="/userMenuIndex"><button class="btn btn-dark btn-lg px-5 py-3 mt-3">Browse Menu</button></a>
    </div>
        <!-- Carousel of static images for learn more -->
    <div class="w-50 m-5 text-center">
        <div class="fixed-height-carousel">
            <div id="carouselz" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselz" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselz" data-slide-to="1"></li>
                    <li data-target="#carouselz" data-slide-to="2"></li>
                    <li data-target="#carouselz" data-slide-to="3"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel3.jpg")" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel1.jpg")" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel2.jpg")" alt="Third slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel4.jpg")" alt="Fourth slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselz" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only"></span>
                </a>
                <a class="carousel-control-next" href="#carouselz" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only"></span>
                </a>
            </div>
        </div>
        <a asp-page="/About"><button class="btn btn-dark btn-lg px-5 py-3 mt-3" >Learn More</button></a>
    </div>
</div>
    <div class="text-center bg-black justify-content-center mb-5">
        <h1 id = "spaced-heading" class="display-5 pb-4 text-white pt-3 border-bottom border-white border-2 ">Our Signatures</h1>
         <div class="row mx-5 mt-5 py-3">
