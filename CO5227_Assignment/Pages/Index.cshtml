@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}



<head>
    <link rel="stylesheet" href="~/css/index.css"/>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</head>

<body id ="bgcolor">

    <!--  -->

    <div id = "image-container">
        <img src="@Url.Content("~/img/oishiisushi_index_bg_img.jpg")" class="img-fluid pb-4" alt="Delicious sushi on a table" />
        <div id="main-image-text"><h1 id = "h1-font-size-increase"class="display-7" >Japanese Restaurant and Bar</h1></div>
    </div>
    
    <!--  -->

    <div class="text-center">
    <h1 id = "spaced-heading" class="display-5 border-bottom border-dark border-2 pb-4">Discover Oishii</h1>
</div>

<!--  -->

<ul class="list-group list-group-horizontal ">
    <div class="w-50 m-5 text-center ">
        <div id="carousels" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/menu_carousel1.jpg")" alt="First slide">
                </div>
                <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/menu_carousel2.jpg")" alt="Second slide">
                </div>
                <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/menu_carousel3.jpg")" alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousels" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only"></span>
            </a>
            <a class="carousel-control-next" href="#carousels" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only"></span>
            </a>
        </div>
            <a asp-page="/MenuFolder/Index"><button class="btn btn-dark btn-lg px-5 py-3 mt-3">Browse Menu</button></a>
    </div>
    <div class="w-50 m-5 text-center">
        <div id="carouselz" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carousel" data-slide-to="0" class="active"></li>
                <li data-target="#carousel" data-slide-to="1"></li>
                <li data-target="#carousel" data-slide-to="2"></li>
                <li data-target="#carousel" data-slide-to="3"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel3.jpg")" alt="First slide">
                </div>
                <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel1.jpg")" alt="Second slide">
                </div>
                <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel2.jpg")" alt="Third slide">
                </div>
                <div class="carousel-item">
                        <img class="d-block w-100 border border-dark border-5" src="@Url.Content("~/img/learn_carousel4.jpg")" alt="Fourth slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselz" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only"></span>
            </a>
            <a class="carousel-control-next" href="#carouselz" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only"></span>
            </a>
        </div>
        <a asp-page="/About"><button class="btn btn-dark btn-lg px-5 py-3 mt-3" >Learn More</button></a>
    </div>
    </ul>

    <!--  -->

    <div class="text-center bg-black justify-content-center">
        <h1 id = "spaced-heading" class="display-5 pb-4 text-white pt-3 border-bottom border-white border-2 ">Our Signatures</h1>
         <div class="row mx-5 mt-5 py-3">
          <div class="col-lg-4 col-md-12 mb-4 mb-lg-0">
                <img src="@Url.Content("~/img/signature-img5.jpg")"
              class="w-100 shadow-1-strong rounded mb-4"
              alt="Temaki, nigiri, maki platter"
            />

            <img src="@Url.Content("~/img/signature-img2.jpg")"
              class="w-100 shadow-1-strong rounded mb-4"
              alt="The Oishii Rolls"
            />
          </div>

          <div class="col-lg-4 mb-4 mb-lg-0">
            <img src="@Url.Content("~/img/signature-img1.jpg")"
              class="w-100 shadow-1-strong rounded mb-4"
              alt="Caviar and soft cheese rolls"
            />

            <img src="@Url.Content("~/img/signature-img4.jpg")"
              class="w-100 shadow-1-strong rounded mb-4"
              alt="Nigiri Platter"
            />
                <a asp-page="/MenuFolder/Index"><button class="btn btn-outline-light btn-lg px-5 py-3 mb-5 mt-3">All Items Found On Our Menu!</button></a>
          </div>

          <div class="col-lg-4 mb-4 mb-lg-0">
            <img src="@Url.Content("~/img/signature-img3.jpg")"
              class="w-100 shadow-1-strong rounded mb-4"
              alt="The Oishii Platter"
            />

            <img src="@Url.Content("~/img/signature-img6.jpg")"
              class="w-100 shadow-1-strong rounded mb-4"
              alt="Salmon Platte"
            />

          </div>

        </div>
    </div>


    

</body>

