@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <link rel="stylesheet" href="~/css/index.css"/>
</head>
<body id ="bgcolor">
    <div id = "image-container">
        <img src="../img/oishiisushi_index_bg_img.jpg" class="img-fluid pb-5" alt="Delicious sushi on a table" />
        <div id="main-image-text"><h1 id = "h1-font-size-increase"class="display-7" >Japanese Restaurant and Bar</h1></div>
    </div>
    
    <div class="text-center">
    <h1 id = "spaced-heading" class="display-5 border-bottom border-dark border-2 pb-3">Discover Oishii</h1>
</div>
<ul class="list-group list-group-horizontal">
    <div class="w-50 m-5">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
